<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:autoMirrored="true">

    <!-- shadow -->
    <!-- 个人觉得更形象的表达：top代表下边的阴影高度，left代表右边的阴影宽度。其实也就是相对应的offset，solid中的颜色是阴影的颜色，也可以设置角度等等 -->
    <item>
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"

                android:endColor="#F1F1F1"
                android:startColor="#979797" />

            <corners
                android:radius="10dp" />

        </shape>
    </item>

    <item
        android:bottom="2dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="90"

                android:endColor="#dbdbdb"
                android:startColor="#dbdbdb" />

            <corners
                android:radius="10dp" />

        </shape>
    </item>

    <item
        android:bottom="3dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="90"

                android:endColor="#bab8b8"
                android:startColor="#bab8b8" />

            <corners
                android:radius="10dp" />

        </shape>
    </item>

    <item
        android:bottom="4dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="90"

                android:endColor="#F1F1F1"
                android:startColor="#979797" />

            <corners
                android:radius="10dp" />

        </shape>
    </item>

    <!-- background -->
    <!-- 形象的表达：bottom代表背景部分在上边缘超出阴影的高度，right代表背景部分在左边超出阴影的宽度（相对应的offset） -->
    <item
        android:bottom="6dp"
        android:right="3dp">
        <shape android:shape="rectangle" >

            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners
                android:bottomLeftRadius="6dp"
                android:bottomRightRadius="6dp"
                android:topLeftRadius="6dp"
                android:topRightRadius="6dp" />

            <stroke android:width="1dp" android:color="#e8e8e8"/>
            <size android:width="280dp" android:height="400dp"></size>
        </shape>
    </item>

</layer-list>
